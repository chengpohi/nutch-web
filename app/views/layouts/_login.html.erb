<div class="modal fade" id="login" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="padding-top: 10%;">
  <div style="max-width: 330px; padding: 15px; margin:0 auto;border: 2px solid #ddd; padding-right: 25px;box-shadow: 0px 0px 20px #999; opacity: 0.8" role="form">

<%= form_for(@user, :url => "/user/update_password" ) do |f| %>
	<h2 class="form-signin-heading" style="text-align:center">密码更改</h2>
  <div class="field">
    <%= f.password_field :password, :autofocus => true, :placeholder => '密码', :class => 'form-control',:autocomplete => "off"  %>
  </div>
  <div class="field">
    <%= f.password_field :password_confirmation , :autofocus => true, :placeholder => '重复密码', :class => 'form-control'%>
  </div>
  <div class="action_container">
	<button class="btn btn-lg btn-primary btn-block" type="submit" style="width: 100%">更新</button>
  </div>
<% end %>
</div>
</div>
